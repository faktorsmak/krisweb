<h2><%= blogentry.title %></h2>
<h5><%= blogentry.submitdate.toDateString() %></h5>
<p><%- blogentry.content %></p>

<% if (user) { %>
		<div class="adminops">
			<a href="/admin/blogentries/edit/<%= blogentry.id %>"><img src="/images/icons/edit.png" alt="Edit" width="20" /></a>
			<a class="deleteentry" id="delete_<%= blogentry.id %>" href="Javascript:void(0);"><img src="/images/icons/delete.png" alt="Delete" width="20" /></a>
		</div>
<% } %>
<a href="https://twitter.com/share" class="twitter-share-button" data-url="http://www.kristinazakrzewski.com/blog/<%= blogentry.id %>" data-via="k_zakrzewski">Tweet</a>
