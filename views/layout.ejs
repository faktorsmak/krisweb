      	<script>
  			// When the document loads do everything inside here ...
  			$(document).ready(function() {

  				$("a.tab").hoverIntent(function() {
  					$("div.menu_content").fadeOut();
  					var content_show = $(this).attr("title");
  					$("#" + content_show).slideDown();
  				}, function() {
  				});


  				// select the tab based on the URL
  				var path = window.location.pathname;
  				if (path == '/') {
  					$('#home').addClass('menuitem_selected');
  				} else if (path.substring(0, 6) === '/books') {
  					$('#novels').addClass('menuitem_selected');
  				} else if (path.substring(0, 8) === '/stories') {
  					$('#stories').addClass('menuitem_selected');
  				} else if (path.substring(0, 5) === '/blog') {
  					$('#blog').addClass('menuitem_selected');
  				} else if (path.substring(0, 5) === '/bio') {
  					$('#bio').addClass('menuitem_selected');
  				}

  			});
  		</script>
