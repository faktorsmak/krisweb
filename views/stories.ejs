<% for(var i=0; i<stories.length; i++) { %>
	<a class="booklistlink" href="/stories/<%= stories[i].id %>">
<% 
    if (i == stories.length-1) {
%>
	<div class="booklistlast">
<% } else { %>
	<div class="booklist">
<% } %>
	  <img src="/images/stories/<%= stories[i].id %>" width="150px" align="left" class="bookicon"/>
	  <h2><%= stories[i].title %></h2>
	  <h5><%= stories[i].submitdate.toDateString() %></h5>
	  <p><%= stories[i].content %>...(click to read more)</p>
	  
		<% if (user) { %>
			<div class="adminops">
				<a href="/admin/stories/edit/<%= stories[i].id %>"><img src="/images/icons/edit.png" alt="Edit" width="20" /></a>
			</div>
		<% } %>
	</div>
	</a>
<% } %>

