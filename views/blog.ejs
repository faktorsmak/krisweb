<script language="javascript">
$(document).ready(function() {
	$(".deleteentry").click(function() {
		var deletedEntry = $(this).parents(".booklist");
		var uri = '/blog/' + $(this).parents(".booklist").attr("id");
		$("#deleteConfirm").dialog({ buttons: 
										{ 
											"Delete": function() {
												var dlg = $(this);
												$.ajax(
												{
													url: uri,
													type: 'DELETE',
													dataType: 'json',
													success: function(data) {
														deletedEntry.hide();
														dlg.dialog("close");
													},
													error: function(data) {
														alert(data.message);
													}
												});
											}
										,
										 
											"Cancel": function() { $(this).dialog("close"); }
										}
									});
	});
});
</script>

