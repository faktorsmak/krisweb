<div class="paging" style="float:right;">
<% if (pages > 1) { %>
  <% if (page > 1) { %>
    <% var prevPage = page-1; %>
    <a href='/blog?page=<%= page-1 %>'> &lt previous </a>&nbsp;
  <% } %>

<% for (var j=1; j<=pages; j++) { %>
  <% if (j != 1) { %>
  |
  <% } %>
  <% if (j != page) { %>
    <a href='/blog?page=<%= j %>' > <%= j %> </a> 
  <% } else { %>
    <%= j %>
  <% } %>
<% } %>

  <% if (page < pages) { %>
    <% var nextPage = parseInt(page,10) + 1; %>
    &nbsp;<a href='/blog?page=<%= nextPage %>'> next &gt; </a>
  <% } %>
<% } %>
</div>
